@using BuyMe.Application.WarehouseINV.Commonds.CreatEdit
@model CreatEditWarehouseCommond
@{
    Layout = null;
}
<style>
    .dropDownListTop {
        margin-top: 15px;
    }
</style>
<div>
    <input asp-for="WarehouseId" type="hidden" />
    <input asp-for="CompanyId" type="hidden" />
    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="WarehouseName" />
                <span class="e-float-line"></span>
                <label asp-for="WarehouseName" class="e-float-text e-label-top">Warehouse Name</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Description" />
                <span class="e-float-line"></span>
                <label asp-for="Description" class="e-float-text e-label-top">Description</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="dropDownListTop">
                <ejs-dropdownlist ejs-for="BranchId"  dataSource="@ViewBag.Branches" placeholder="Select Branch" popupHeight="200px">
                    <e-dropdownlist-fields text="BranchName" value="BranchId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>

        </div>
      
    </div>
</div>

<ejs-scripts></ejs-scripts>

