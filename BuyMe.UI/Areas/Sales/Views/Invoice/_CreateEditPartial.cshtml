@using BuyMe.Application.Invoice.Commonds.CreatEditInvoice
@using Newtonsoft.Json
@model UpSertInvoiceCommond
@{
    Layout = null;
}
<style>
    .dropDownListTop {
        margin-top: 15px;
    }
</style>
<div>

    <input asp-for="InvoiceId" type="hidden" />
    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="InvoiceName" readonly />
                <span class="e-float-line"></span>
                <label asp-for="InvoiceName" class="e-float-text e-label-top">Invoice #</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="InvoiceDate" type="date" />
                <span class="e-float-line"></span>
                <label asp-for="InvoiceDate" class="e-float-text e-label-top">InvoiceDate</label>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="InvoiceDueDate" type="date" />
                <span class="e-float-line"></span>
                <label asp-for="InvoiceDueDate" class="e-float-text e-label-top">InvoiceDueDate</label>
            </div>
        </div>
    </div>
    
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="dropDownListTop">
                <ejs-dropdownlist ejs-for="InvoiceTypeId" dataSource="@ViewBag.InvoiceTypes" placeholder="Select InvoiceType" popupHeight="200px">
                    <e-dropdownlist-fields text="InvoiceTypeName" value="InvoiceTypeId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="dropDownListTop">
                <ejs-dropdownlist ejs-for="ShipmentId" dataSource="@ViewBag.Shipments" placeholder="Select Shipment" popupHeight="200px">
                    <e-dropdownlist-fields text="ShipmentName" value="ShipmentId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
    </div>
</div>

<ejs-scripts></ejs-scripts>