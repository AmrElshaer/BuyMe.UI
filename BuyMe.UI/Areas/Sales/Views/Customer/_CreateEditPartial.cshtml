@using BuyMe.Application.Customer.Commonds.CreatEditCustomer
@using Newtonsoft.Json
@model CreatEditCustomerCommond
@{
    Layout = null;
}
<style>
    .dropDownListTop {
        margin-top: 15px;
    }
</style>
<div>

    <input asp-for="CompanyId" type="hidden" />
    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="CustomerName" />
                <span class="e-float-line"></span>
                <label asp-for="CustomerName" class="e-float-text e-label-top">Customer Name</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Email" />
                <span class="e-float-line"></span>
                <label asp-for="Email" class="e-float-text e-label-top">Email</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Country" />
                <span class="e-float-line"></span>
                <label asp-for="Country" class="e-float-text e-label-top">Country</label>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="City" />
                <span class="e-float-line"></span>
                <label asp-for="City" class="e-float-text e-label-top">City</label>
            </div>
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Phone" />
                <span class="e-float-line"></span>
                <label asp-for="Phone" class="e-float-text e-label-top">Phone</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Address" />
                <span class="e-float-line"></span>
                <label asp-for="Address" class="e-float-text e-label-top">Address</label>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="dropDownListTop">
                <ejs-dropdownlist ejs-for="CustomerTypeId" dataSource="@ViewBag.CustomerTypes" placeholder="Select CustomerType" popupHeight="200px">
                    <e-dropdownlist-fields text="CustomerTypeName" value="Id"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
    </div>
</div>

<ejs-scripts></ejs-scripts>