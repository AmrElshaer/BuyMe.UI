@page
@model BuyMe.UI.Areas.Identity.Pages.Account.HaveOrganizationModel

    <style>
        .new-org-form {
            background-image: linear-gradient(to right,rgb(56, 126, 190), rgba(106, 131, 214, 0.67));
        }

        .register-left {
            text-align: center;
            color: beige;
            padding: 30px;
        }

            .register-left p {
                padding: 20px 20px 0;
            }

            .register-left .btn-primary {
                border-radius: 1.5rem;
                width: 120px;
                background: #f8f8f8;
                border: none;
                font-weight: 600;
                color: #555;
                margin-top: 20px;
                padding: 10px;
            }

                .register-left .btn-primary:hover {
                    background: rgb(4, 34, 100);
                }

        .register-right {
            border: none;
            background: #f8f8f8;
            border-top-left-radius: 10% 50%;
            border-bottom-left-radius: 10% 50%;
            padding: 50px;
        }

            .register-right h2 {
                text-align: center;
                margin-bottom: 10px;
                color: #555;
            }

        .Register-form {
            padding: 30px;
        }

        .register-right .btn-primary {
            float: right;
            border-radius: 1.5rem;
            width: 120px;
            background: rgb(38, 109, 216);
            border: none;
            font-weight: 600;
            color: #fff;
            margin-top: 20px;
            padding: 10px;
        }

            .register-right .btn-primary:hover {
                background: #132bb3;
            }

        .button-primary {
            float: left;
        }
      
    </style>

<div id="haveOrg" style="margin-bottom:15%"></div>
<div class="new-org-form" style="margin-bottom:15%">
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset=md-1">
                <div class="row">
                    <div class="col-md-6 register-left">
                        <img src="~/images/ByMe (2).png" style="margin-top:15%" />
                    </div>
                    <div class="col-md-6 register-right">

                        <h2>Have Organization</h2>
                        <form class="Register-form" asp-area="" asp-action="Index" asp-controller="Home">
                          
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="tenant" placeholder="Organization Name">
                            </div>
                            <div class="btn2" style="text-align:left;
                padding: 5px;
                display: flex;
                flex-wrap: wrap;
                justify-content: flex-start;
                align-items: center;
                padding-top: 5px;
            ">
                                <a asp-page="NewOrganization" style="margin-top: 2px;">New Organization</a>
                            </div>




                            <button type="submit" class="btn btn-primary">Sign In <i class="bi bi-box-arrow-in-right"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
    $(document).ready(() => {

        $(document).ready(function () {
            // Handler for .ready() called.
            $('html, body').animate({
                scrollTop: $('#haveOrg').offset().top
            }, 'slow');
        });
    });
    </script>
}