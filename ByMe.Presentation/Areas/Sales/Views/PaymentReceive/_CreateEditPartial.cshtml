@using BuyMe.Application.PaymentReceive.Commonds.CreatEditPaymentReceive
@using Newtonsoft.Json
@model CreatEditPaymentReceiveCommond
@{
    Layout = null;
}
<style>
    .dropDownListTop {
        margin-top: 15px;
    }
</style>
<div>

    <input asp-for="PaymentReceiveId" type="hidden" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="PaymentReceiveName" readonly />
                <span class="e-float-line"></span>
                <label asp-for="PaymentReceiveName" class="e-float-text e-label-top">PaymentReceive#</label>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="PaymentDate" type="date" />
                <span class="e-float-line"></span>
                <label asp-for="PaymentDate" class="e-float-text e-label-top">PaymentDate</label>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="dropDownListTop">
                <ejs-dropdownlist ejs-for="InvoiceId" dataSource="@ViewBag.Invoices" placeholder="Select Invoice" popupHeight="200px">
                    <e-dropdownlist-fields text="InvoiceName" value="InvoiceId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="dropDownListTop">
                <ejs-dropdownlist ejs-for="PaymentTypeId" dataSource="@ViewBag.PaymentTypes" placeholder="Select PaymentType" popupHeight="200px">
                    <e-dropdownlist-fields text="PaymentTypeName" value="PaymentTypeId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">

            <div class="e-float-input e-control-wrapper">
                <ejs-checkbox id="cbox2" name="IsFullPayment" value="@Model.IsFullPayment" checked="@Model.IsFullPayment" label="IsFullPayment"></ejs-checkbox>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="PaymentAmount" type="number" />
                <span class="e-float-line"></span>
                <label asp-for="PaymentAmount" class="e-float-text e-label-top">Payment Amount</label>
            </div>
        </div>
    </div>
</div>

<ejs-scripts></ejs-scripts>