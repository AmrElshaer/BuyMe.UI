@using BuyMe.Application.SalesOrder.Commonds
@using Newtonsoft.Json
@model CreateEditSOCommond
@{
    Layout = null;
}
<style>
    .dropDownListTop {
        margin-top: 15px;
    }
</style>
<div>
    <input asp-for="SalesOrderId" type="hidden" />
    <input asp-for="CurrencyId" type="hidden" />
    <input asp-for="CompanyId" type="hidden" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="SalesOrderName" readonly />
                <span class="e-float-line"></span>
                <label asp-for="SalesOrderName" class="e-float-text e-label-top">SalesOrder #</label>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="dropDownListTop">
                <ejs-dropdownlist ejs-for="CustomerId" placeholder="Select Customer" dataSource="@ViewBag.Customers" popupHeight="200px">
                    <e-dropdownlist-fields text="CustomerName" value="Id"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="OrderDate" type="date" />
                <span class="e-float-line"></span>
                <label asp-for="OrderDate" class="e-float-text e-label-top">OrderDate</label>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="DeliveryDate" type="date" />
                <span class="e-float-line"></span>
                <label asp-for="DeliveryDate" class="e-float-text e-label-top">DeliveryDate</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Remarks" />
                <span class="e-float-line"></span>
                <label asp-for="Remarks" class="e-float-text e-label-top">Remarks</label>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="dropDownListTop">
                <ejs-dropdownlist ejs-for="SalesTypeId" placeholder="SalesType" dataSource="@ViewBag.SalesTypes" popupHeight="200px">
                    <e-dropdownlist-fields text="SalesTypeName" value="Id"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="dropDownListTop">
                <ejs-dropdownlist ejs-for="BranchId" change="branchChange" dataSource="@ViewBag.Branches" placeholder="Select Branch" popupHeight="200px">
                    <e-dropdownlist-fields text="BranchName" value="BranchId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input readonly asp-for="CurrencyCode" />
                <span class="e-float-line"></span>
                <label class="e-float-text e-label-top">Currency</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Freight" />
                <span class="e-float-line"></span>
                <label class="e-float-text e-label-top">Freight</label>
            </div>
        </div>
    </div>
</div>

<ejs-scripts></ejs-scripts>