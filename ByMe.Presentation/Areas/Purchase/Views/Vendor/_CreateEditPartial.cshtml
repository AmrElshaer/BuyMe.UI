@using BuyMe.Application.Vendor.Commonds.CreatEdit
@model CreatEditVendorCommond
@{
    Layout = null;
}
<style>
    .dropDownListTop {
        margin-top: 15px;
    }
</style>
<div>
    <input asp-for="Id" type="hidden" />

    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Name" />
                <span class="e-float-line"></span>
                <label asp-for="Name" class="e-float-text e-label-top">Vendor Name</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Address" />
                <span class="e-float-line"></span>
                <label asp-for="Address" class="e-float-text e-label-top">Address</label>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="City" />
                <span class="e-float-line"></span>
                <label asp-for="City" class="e-float-text e-label-top">City</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Email" />
                <span class="e-float-line"></span>
                <label asp-for="Email" class="e-float-text e-label-top">Email</label>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="dropDownListTop">
                <ejs-dropdownlist ejs-for="VendorTypeId" dataSource="@ViewBag.VendorTypes" placeholder="Select VendorType" popupHeight="200px">
                    <e-dropdownlist-fields text="Name" value="Id"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
    </div>
</div>

<ejs-scripts></ejs-scripts>